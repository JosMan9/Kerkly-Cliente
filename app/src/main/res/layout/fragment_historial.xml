<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historial_contratos"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="10dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_historial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>


    <ImageView
        android:id="@+id/img_historial"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/imagen_lista_vacia" />

    <TextView
        android:id="@+id/txt_historial"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/lista_vacia_historial"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:lines="2"
        android:textSize="20sp"/>

</LinearLayout>